{
    "name": "@wrmz/web-components",
    "version": "1.0.0",
    "description": "A set of web components for Graphic Language, Inc.",
    "license": "UNCLICENSED",
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wrmz/web-components.git"
    },
    "main": "dist/web-components.js",
    "files": [
        "dist/*.js",
        "dist/**/*.js"
    ],
    "type": "module",
    "module": "dist/esm/web-components.js",
    "scripts": {
        "start": "concurrently -k \"node server.js docs\" \"cross-env NODE_ENV=local rollup -c -w\"",
        "build": "rollup -c",
        "pretest": "cross-env NODE_ENV=local yarn run build",
        "test": "concurrently -k -s first \"nyc --reporter=lcov --reporter=text-summary jasmine\" \"node server.js docs\"",
        "prepublishOnly": "yarn run lint && yarn test && yarn run build",
        "lint": "eslint src/**/*.js && stylelint src/**/*.css && html-validate src/**/*.html"
    },
    "devDependencies": {
        "axe-core": "^4.3.5",
        "clean-css": "^5.2.2",
        "concurrently": "^6.3.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.1.0",
        "html-minifier": "^4.0.0",
        "html-validate": "^6.1.0",
        "jasmine": "^3.10.0",
        "nyc": "^15.1.0",
        "puppeteer": "^10.4.0",
        "rollup": "^2.58.3",
        "rollup-plugin-terser": "^7.0.2",
        "stylelint": "^14.0.1",
        "stylelint-config-standard": "^23.0.0"
    }
}
